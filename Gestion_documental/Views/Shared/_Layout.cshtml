<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion_documental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_documental.styles.css" asp-append-version="true" />
</head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-naranja">
            <div class="container">
            <a class="navbar-brand fw-bold">COOTRANSBEL <i class="fa-solid fa-bus"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="index">Inicio</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="ListaDocumentos" asp-action="Index">Documentos</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Autenticacion" asp-action="CerrarSesion">Cerrar Sesión</a>
                    </li>
                    </ul>
                    <a class="d-flex ms-auto lupa" asp-controller="Documentos" asp-action="Buscar" style="text-decoration:none">
                    <i class="fa-solid fa-magnifying-glass text-white" id="searchIcon"></i>
                    </a>
                </div>
            </div>
        </nav>

        <div class="container my-4">
            <div class="row">
            <div class="col-md-9 d-flex justify-content-center mx-auto vw-100 bg-naranja">
                <div class="card w-100">
                    <div class="card-body">
                            <div class="table-responsive">
                                <div class="container">
                                    <main role="main" class="pb-3 alto">
                                        @RenderBody()
                                    </main>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

     <footer class="border-top footer text-muted"> 
         <div class="container"> 
             &copy; 2025 - Gestion_documental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> 
         </div> 
    </footer> 
    <script src="https://kit.fontawesome.com/531e43a2f9.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
                document.getElementById('Busqueda').addEventListener('click', function () {
            document.getElementById('Busqueda').classList.toggle('show');
        });

        document.getElementById('limpiarBtn').addEventListener('click', function () {
            const form = document.querySelector('form');
            form.reset();
        });
    </script>
</body>
</html>
