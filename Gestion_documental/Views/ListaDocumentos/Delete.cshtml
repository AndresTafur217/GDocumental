@model Gestion_documental.Models.Documento

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Confirma la eliminación permanente del documento?</h3>
<div>
    <h4>Documento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
           Ubicación del archivo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ruta)
        </dd>
        <dt class = "col-sm-2">
           Archivo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Copia)
        </dd>
        <dt class = "col-sm-2">
           Fecha de carga
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            Ingresado por:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
        <dt class = "col-sm-2">
           Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
