@model Gestion_documental.Models.Documento
@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Documento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
           Ubicacion del archivo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ruta)
        </dd>

        <dt class="col-sm-2">
           Archivo
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Copia))
            {
                <a asp-action="DownloadFile" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-download"></i> Descargar archivo <i class="fa-solid fa-download text-light"></i>
                </a>
            }
            else
            {
                <span> Archivo no disponible</span>
            }
        </dd>

        <dt class="col-sm-2">
            Fecha de carga
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>

        <dt class="col-sm-2">
           Añadido por:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>